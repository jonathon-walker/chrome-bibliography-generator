{
    "manifest_version": 2,
    "name": "Bibliography Generator",
    "description": "Automatically generate bibliography references from the tabs open in your browser",
    "version": "0.1",
    "permissions": [
        "tabs"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}
